@model List<PerfumeStore.Application.Dtos.CategoryDtos.ResultCategoryDto>

<ul class="sub_menu">
    @foreach (var category in Model)
    {
        <li>
            <a href="/Kataloq/Index?categoryId=@category.Id">

                @{
                    string azName = category.Name switch
                    {
                        "Men" => "Kişi",
                        "Women" => "Qadın",
                        "Unisex" => "Unisex",_ => category.Name

                    };
                }
                @azName
                </a>
        </li>
    }
</ul>