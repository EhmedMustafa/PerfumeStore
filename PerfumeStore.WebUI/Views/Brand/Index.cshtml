
@model ResultBrandDto

<body>
    <!-- Breadcrumb naviqasiyası -->
    <div class="breadcrumb">
        <div class="container">
            <ul class="breadcrumb-list">
                <!-- JavaScript ilə doldurulacaq -->
            </ul>
        </div>
    </div>
   
        <section class="brand-info" style="margin-top:80px">
            <div class="container">
                <div class="brand-content">
                    <div class="brand-image">
                        <img src="@Model.LogoUrl" alt="@Model.Name">
                    </div>
                    <div class="brand-details">
                        <div class="brand-header">
                            <h1>@Model.Name</h1>
                            <p class="brand-tagline">@Model.Tagline</p>
                        </div>
                        <p class="brand-description">
                            @Model.Description
                        </p>
                    </div>
                </div>
            </div>
        </section>
        @if (Model.products != null && Model.products.Any())
        {
            <section class="products-section" style="margin-bottom:80px">
                <div class="container">
                    <div class="section-header">
                        @* <h2>@Model.Name</h2> *@
                    </div>
                    <div class="product-grid">

                        @foreach (var product in Model.products)
                        {
                            <article class="product-card"
                                     data-gender="@product.CategoryName?.ToLower()"
                                     data-family="@product.FamilyName?.ToLower()"
                                     data-brand="@product.BrandName?.ToLower()"
                                     data-price="">
                                <div class="product-image">
                                    <img src="~/new-product/N1-2.png" alt="@product.Name" />
                                    <div class="product-badges">
                                        @if (product.IsNew)
                                        {
                                            <span class="badge new">New</span>
                                        }
                                        @if (product.IsBestseller)
                                        {
                                            <span class="badge bestseller">Bestseller</span>
                                        }
                                    </div>
                                    <div class="product-actions">
                                        <button class="favorite-btn"><i class="far fa-heart"></i></button>
                                        <span class="product-disclaimer">Şəkil tanıtım xarakteri daşıyır</span>
                                        <button class="add-to-cart"><i class="fas fa-shopping-cart"></i></button>
                                    </div>
                                </div>

                                <div class="product-info">
                                    <h3>@product.Name</h3>
                                    <p class="product-description">
                                        @product.Description
                                        <span class="fragrance-family">Family: @product.FamilyName</span>

                                    </p>
                                   @*  <div class="product-price">
                                        <span class="current-price">@product.CurrentPrice ₼</span>
                                        <span class="original-price">@product.OriginalPrice ₼</span>
                                    </div> *@
                                </div>
                            </article>

                        }







                    </div>
                </div>
            </section>
        }
     
</body>