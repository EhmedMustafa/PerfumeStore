    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const plusButtons = document.querySelectorAll(".plus");
            const minusButtons = document.querySelectorAll(".minus");
            const inputs = document.querySelectorAll(".quantity-input");
            const totalAmountEl = document.querySelector(".total-amount");
            const addToCartBtn = document.querySelector(".btn-add-to-cart");

            // Say artır/azalt
            plusButtons.forEach(btn => {
                btn.addEventListener("click", function () {
                    let input = this.parentElement.querySelector(".quantity-input");
                    input.value = parseInt(input.value) + 1;
                    updateTotal();
                });
            });

            minusButtons.forEach(btn => {
                btn.addEventListener("click", function () {
                    let input = this.parentElement.querySelector(".quantity-input");
                    if (parseInt(input.value) > 1) {
                        input.value = parseInt(input.value) - 1;
                        updateTotal();
                    }
                });
            });

            // Ümumi məbləği hesabla
            function updateTotal() {
                const selected = document.querySelector("input[name='size']:checked");
                if (selected) {
                    let price = parseFloat(selected.dataset.price);
                    let qty = parseInt(selected.closest("label").querySelector(".quantity-input").value);
                    totalAmountEl.textContent = (price * qty).toFixed(2) + " ₼";
                }
            }

            document.querySelectorAll("input[name='size']").forEach(radio => {
                radio.addEventListener("change", updateTotal);
            });
            inputs.forEach(inp => inp.addEventListener("input", updateTotal));

            // Səbətə əlavə et
            addToCartBtn.addEventListener("click", function () {
                const selected = document.querySelector("input[name='size']:checked");
                if (!selected) { alert("Ölçü seçin."); return; }

                const variantId = Number(selected.value); // <-- BURADAN OXU
                const qty = Number(selected.closest("label").querySelector(".quantity-input").value);

                if (!Number.isInteger(variantId) || variantId <= 0) {
                    alert("Variant ID düzgün deyil.");
                    console.log("selected.value:", selected.value);
                    return;
                }
                if (!Number.isInteger(qty) || qty <= 0) {
                    alert("Miqdar düzgün deyil.");
                    return;
                }

                fetch("/Cart/AddToCartItem", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({
                        ProductVariantId: variantId,   // PascalCase!
                        Quantity: qty
                    })
                })
                    .then(r => r.json())
                    .then(d => {
                        if (d.success) {
                            alert(d.message);
                            updateCartDropdown();
                        }

                        else {
                            alert("Xəta: " + d.message);
                        } 

                    });
                
            });
        });
    </script>

    <script>
        window.updateCartDropdown = function () {
            $("#cartDropdownContainer").load("/Cart/RefreshCartDropdown");
        }
    </script>



