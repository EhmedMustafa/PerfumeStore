                <!-- Ətir notları -->
                @{
                    var topNotes = Model?.ProductNotes
                    .Where(pn => pn.Type == NoteType.Top)
                    .Select(pn => pn.FragranceNote)
                    .ToList();

                    var middleNotes = Model?.ProductNotes
                    .Where(pn => pn.Type == NoteType.Middle)
                    .Select(pn => pn.FragranceNote)
                    .ToList();

                    var baseNotes = Model?.ProductNotes
                    .Where(pn => pn.Type == NoteType.Base)
                    .Select(pn => pn.FragranceNote)
                    .ToList();
                }

                <div class="tab-pane active" id="notes">
                    <h2>Ətir notları</h2>
                    <div class="notes-container">

                        <div class="note-group">
                            <h4>Üst notları:</h4>
                            @if (topNotes.Any())
                            {
                                <ul>
                                    @foreach (var note in topNotes)
                                    {
                                        <li>@note?.Name</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p style="color:red">Top not tapılmadı.</p>
                            }

                        </div>

                        <div class="note-group">
                            <h4>Ürək notları:</h4>
                            @if (middleNotes.Any())
                            {
                                <ul>
                                    @foreach (var note in middleNotes)
                                    {
                                        <li>@note?.Name</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p style="color:red">Middle not tapılmadı.</p>
                            }
                        </div>

                        <div class="note-group">
                            <h4>Baza notları:</h4>
                            @if (baseNotes.Any())
                            {
                                <ul>
                                    @foreach (var note in baseNotes)
                                    {
                                        <li>@note?.Name</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p style="color:red">Base not tapılmadı.</p>
                            }
                           
                        </div>

                    </div>
                </div>

              

                <!-- Çatdırılma -->
                <div class="tab-pane" id="delivery">
                    <h2>Çatdırılma və ödəniş</h2>
                    <div class="delivery-info">
                        <div class="delivery-section">
                            <h3>Çatdırılma şərtləri</h3>
                            <ul>
                                <li>100 ₼ və yuxarı sifarişlərdə pulsuz çatdırılma</li>
                                <li>Bakı şəhəri daxilində 1-2 iş günü</li>
                                <li>Regionlara 3-5 iş günü</li>
                                <li>Çatdırılma qiyməti: 5 ₼</li>
                            </ul>
                        </div>
                        <div class="payment-section">
                            <h3>Ödəniş üsulları</h3>
                            <ul>
                                <li>Nağd ödəniş</li>
                                <li>Bank kartları</li>

                            </ul>
                        </div>
                    </div>
                </div>

