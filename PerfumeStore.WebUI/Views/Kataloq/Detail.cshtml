                                <br>
                                məhsul və xidmət

                            </li>
                            <li>
                                <img src="/delivery/pay.png" alt="Çatdırılma zamanı ödəmə">
                                Çatdırılma
                                <br>
                                zamanı ödəmə

                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Ətraflı məlumatlar -->
    <section class="product-details">
        <div class="container">
            <div class="details-tabs">
                <!--    <button class="tab-btn active" data-tab="description">Təsvir</button> -->
                <button class="tab-btn" data-tab="notes">Ətir notları</button>
                <button class="tab-btn" data-tab="delivery">Çatdırılma</button>

            </div>

            <div class="tab-content">
                <!-- Təsvir

                <div class="tab-pane active" id="description">
