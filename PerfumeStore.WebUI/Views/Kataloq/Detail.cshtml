@using PerfumeStore.Domain.Enums

@model GetByIdProductDto
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Acqua di Parma Colonia - Məhsul Detalları</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="Detail.css">
</head>


<style>
    /* Ümumi stillər */
    :root {
    --primary-color: #1A1A1A;
    --accent-color: #FF6B6B;
    --text-color: #2C3E50;
    --light-gray: #F8F9FA;
    --border-color: #E9ECEF;
    --shadow: 0 8px 24px rgba(0,0,0,0.05);
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    --gradient: linear-gradient(135deg, #FF6B6B 0%, #FF8E8E 100%);
    }

    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    }

    body {
    font-family: 'Inter', sans-serif;
    line-height: 1.6;
    color: var(--text-color);
    background-color: var(--light-gray);
    }

    .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    }

    /* Breadcrumb */
    .breadcrumb {
    background-color: white;
    padding: 20px 0;
    border-bottom: 1px solid var(--border-color);
    box-shadow: var(--shadow);
    }

    .breadcrumb-list {
    list-style: none;
    display: flex;
    align-items: center;
    gap: 12px;
    }

    .breadcrumb-list li {
    font-size: 14px;
    font-weight: 500;
    }

    .breadcrumb-list li a {
    color: var(--accent-color);
    text-decoration: none;
    transition: var(--transition);
    padding: 4px 8px;
    border-radius: 4px;
    }

    .breadcrumb-list li a:hover {
    color: var(--primary-color);
    background-color: var(--light-gray);
    }

    .breadcrumb-list li span {
    color: #6C757D;
    }

    /* Əsas məhsul bölməsi */
    .product-main {
    padding: 60px 0;
    background-color: white;
    margin: 30px 0;
    border-radius: 16px;
    box-shadow: var(--shadow);
    }

    .product-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    }

    /* Şəkil qalereyası */
    .product-gallery {
    position: relative;
    }

    .main-image {
    margin-bottom: 24px;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: var(--transition);
    }

    .main-image:hover {
    transform: scale(1.02);
    }

    .main-image img {
    width: 100%;
    height: auto;
    display: block;
    }

    .thumbnail-list {
    display: flex;
    gap: 16px;
    }

    .thumbnail-list img {
    width: 90px;
    height: 90px;
    object-fit: cover;
    border-radius: 12px;
    cursor: pointer;
    transition: var(--transition);
    border: 2px solid transparent;
    }

    .thumbnail-list img:hover {
    transform: translateY(-5px);
    border-color: var(--accent-color);
    }

    .thumbnail-list img.active {
    border-color: var(--accent-color);
    }

    /* Məhsul məlumatları */
    .product-info {
    padding: 30px;
    background: white;
    border-radius: 16px;
    box-shadow: var(--shadow);
    width: 650px;
    }

    .product-header h1 {
    font-size: 36px;
    margin-bottom: 12px;
    color: var(--primary-color);
    font-weight: 600;
    letter-spacing: -0.5px;
    display: flex;
    flex-direction: column;
    gap: 4px;
    }

    .product-header h1 .brand-name {
    font-size: 24px;
    color: rgb(28, 101, 190);
    font-weight: 500;
    letter-spacing: 1px;
    text-transform: uppercase;
    }

    .product-header h1 .product-name {
    font-size: 42px;
    color: var(--primary-color);
    font-weight: 700;
    letter-spacing: -1px;
    line-height: 1.1;
    }

    .product-subtitle {
    color: var(--accent-color);
    font-size: 20px;
    margin-bottom: 24px;
    font-weight: 500;
    }

    .product-price {
    margin-bottom: 36px;
    padding: 24px;
    background: var(--gradient);
    border-radius: 16px;
    box-shadow: 0 8px 24px rgba(232, 180, 180, 0.2);
    }

    .current-price {
    display: flex;
    align-items: baseline;
    gap: 4px;
    color: white;
    }

    .current-price .currency {
    font-size: 24px;
    font-weight: 500;
    opacity: 0.9;
    }

    .current-price .amount {
    font-size: 48px;
    font-weight: 700;
    line-height: 1;
    letter-spacing: -1px;
    }

    .current-price .usd {
    font-size: 16px;
    opacity: 0.8;
    margin-left: 8px;
    font-weight: 400;
    }

    .old-price {
    font-size: 20px;
    color: #6C757D;
    text-decoration: line-through;
    margin-top: 8px;
    }

    .discount {
    color: #E74C3C;
    margin-left: 12px;
    font-weight: 500;
    }

    /* Düymələr */
    .product-action {
    display: flex;
    gap: 20px;
    margin-bottom: 36px;
    }

    .btn-add-to-cart,
    .btn-wishlist {
    padding: 16px 32px;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    font-size: 16px;
    font-weight: 500;
    transition: var(--transition);
    display: flex;
    align-items: center;
    gap: 12px;
    }

    .btn-add-to-cart {
    background: var(--gradient);
    color: white;
    box-shadow: 0 4px 12px rgba(232, 180, 180, 0.3);
    }

    .btn-wishlist {
    background-color: white;
    border: 2px solid var(--accent-color);
    color: var(--accent-color);
    }

    .btn-add-to-cart:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(232, 180, 180, 0.4);
    }

    .btn-wishlist:hover {
    background-color: var(--light-gray);
    transform: translateY(-2px);
    }

    /* Meta məlumatlar */
    .product-meta {
    border-top: 1px solid var(--border-color);
    padding-top: 24px;
    margin-top: 24px;
    }

    .meta-item {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
    font-size: 15px;
    padding: 8px 12px;
    border-radius: 8px;
    transition: var(--transition);
    }

    .meta-item:hover {
    background-color: var(--light-gray);
    }

    .meta-item i {
    color: var(--accent-color);
    font-size: 18px;
    }

    /* Tab bölməsi */
    .product-details {
    padding: 60px 0;
    background-color: white;
    margin: 30px 0;
    border-radius: 16px;
    box-shadow: var(--shadow);
    }

    .details-tabs {
    display: flex;
    gap: 30px;
    border-bottom: 2px solid var(--border-color);
    margin-bottom: 40px;
    padding: 0 20px;
    }

    .tab-btn {
    padding: 12px 24px;
    border: none;
    background: none;
    cursor: pointer;
    font-size: 16px;
    font-weight: 500;
    color: var(--text-color);
    position: relative;
    transition: var(--transition);
    }

    .tab-btn:hover {
    color: var(--accent-color);
    }

    .tab-btn.active {
    color: var(--accent-color);
    }

    .tab-btn.active::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--gradient);
    }

    .tab-pane {
    display: none;
    padding: 0 20px;
    }

    .tab-pane.active {
    display: block;
    animation: fadeIn 0.5s ease;
    }

    hr {
    color: #2196F3;
    }

    @@keyframes fadeIn {


    from {
    opacity: 0;
    transform: translateY(10px);
    }

    to {
    opacity: 1;
    transform: translateY(0);
    }

    }

    /* Təsvir */
    .description-text {
    margin-bottom: 24px;
    line-height: 1.8;
    font-size: 16px;
    color: #495057;
    }

    .features-list {
    list-style: none;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
    }

    .features-list li {
    margin-bottom: 12px;
    padding-left: 24px;
    position: relative;
    font-size: 15px;
    }

    .features-list li::before {
    content: '•';
    color: var(--accent-color);
    position: absolute;
    left: 0;
    font-size: 20px;
    }

    /* Ətir notları */
    .notes-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    padding: 20px;
    background: var(--light-gray);
    border-radius: 16px;
    }

    .note-group h3 {
    margin-bottom: 20px;
    color: var(--accent-color);
    font-size: 20px;
    font-weight: 600;
    }

    .note-group ul {
    list-style: none;
    }

    .note-group li {
    margin-bottom: 12px;
    padding: 8px 12px;
    background: white;
    border-radius: 8px;
    box-shadow: var(--shadow);
    transition: var(--transition);
    }

    .note-group li:hover {
    transform: translateX(5px);
    background: var(--gradient);
    color: white;
    }



  

    /* Məhsul ölçüləri */
    .product-sizes {
    margin-bottom: 20px;
    background: linear-gradient(145deg, #ffffff, #f0f7ff);
    padding: 12px;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(64, 156, 255, 0.1);
    border: 1px solid rgba(64, 156, 255, 0.2);
    }

    .product-sizes h3 {
    font-size: 14px;
    color: #409CFF;
    margin-bottom: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    }

    .size-options {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 8px;
    }

    .size-option {
    position: relative;
    cursor: pointer;
    background: white;
    padding: 8px;
    border-radius: 6px;
    box-shadow: 0 1px 3px rgba(64, 156, 255, 0.1);
    transition: all 0.3s ease;
    border: 1px solid rgba(64, 156, 255, 0.2);
    }

    .size-option:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(64, 156, 255, 0.2);
    border-color: #409CFF;
    background: linear-gradient(145deg, #ffffff, #f0f7ff);
    }

    .size-option input[type="checkbox"] {
    position: absolute;
    opacity: 0;
    cursor: pointer;
    }

    .size-label {
    display: block;
    font-size: 13px;
    font-weight: 600;
    color: #409CFF;
    margin-bottom: 6px;
    }

    .size-quantity {
    display: flex;
    align-items: center;
    gap: 4px;
    margin: 6px 0;
    }

    .quantity-btn {
    width: 20px;
    height: 20px;
    border: none;
    background: linear-gradient(135deg, #409CFF, #64B5F6);
    color: white;
    border-radius: 4px;
    cursor: pointer;
    font-size: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    padding: 0;
    box-shadow: 0 2px 4px rgba(64, 156, 255, 0.2);
    }

    .quantity-btn:hover {
    transform: scale(1.05);
    background: linear-gradient(135deg, #2196F3, #42A5F5);
    box-shadow: 0 3px 6px rgba(64, 156, 255, 0.3);
    }

    .quantity-input {
    width: 32px;
    height: 20px;
    text-align: center;
    border: 1px solid #409CFF;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 500;
    padding: 0;
    color: #409CFF;
    background: #f0f7ff;
    }

    .quantity-input:focus {
    outline: none;
    border-color: #2196F3;
    box-shadow: 0 0 0 2px rgba(64, 156, 255, 0.1);
    background: white;
    }

    .size-price {
    display: block;
    font-size: 13px;
    font-weight: 600;
    color: #409CFF;
    margin-top: 4px;
    }

    .size-option input[type="checkbox"]:checked + .size-label {
    color: #2196F3;
    }

    .size-option input[type="checkbox"]:checked ~ .size-quantity,
    .size-option input[type="checkbox"]:checked ~ .size-price {
    opacity: 1;
    }

    .size-option input[type="checkbox"]:not(:checked) ~ .size-quantity {
    opacity: 0.5;
    pointer-events: none;
    }

    .total-price {
    margin-top: 12px;
    padding-top: 8px;
    border-top: 1px solid rgba(64, 156, 255, 0.2);
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 13px;
    font-weight: 500;
    }

    .total-price span:first-child {
    color: #409CFF;
    }

    .total-amount {
    color: #2196F3;
    font-size: 15px;
    font-weight: 600;
    }

    /* share buttun start */
    .share-buttons-container > * {
    list-style: none;
    margin: 0;
    padding: 0;
    text-decoration: none;
    }

    .share-buttons-container .buttons {
    display: flex;
    align-items: center;
    font-size: 20px;
    margin-right: 0px;
    }

    .share-buttons-container li {
    padding: 0 10px;
    }

    .share-buttons-container .buttons span {
    color: lightgray;
    font-size: 20px;
    }

    .product_socials {
    border-bottom: 1px solid rgba(218, 194, 194, 0.852);
    margin-top: 10px;
    padding-bottom: 10px;
    }

    /* share buttun end */

    /* info deliver start */

    .adventages img {
    display: block;
    height: 50px;
    width: 50px;
    object-fit: contain;
    margin-right: 1rem;
    }

    .adventages ul li {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    font: 14px Arial;
    color: #06396b;
    padding: 0 .3rem;
    padding-top: 10px;
    }

    .adventages ul {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    }
    /*  infro deliver end*/

    /*  NoteforPerfume  start*/


    .NoteforPerfum  h2{
    font-size: 16px;
    color: #9da0a2;
    font-style: normal;
    transition: var(--transition);
    margin: 20px 0 20px 0;
    font-weight:500;
    }


    /*  NoteforPerfume  end*/
    /* Responsive dizayn */
    @@media (max-width: 992px) {
    .product-content

    {
    grid-template-columns: 1fr;
    gap: 40px;
    }

    .notes-container,
    .delivery-info {
    grid-template-columns: 1fr;
    }

    .features-list {
    grid-template-columns: 1fr;
    }

    }

    @@media (max-width: 768px) {
    .product-header h1 .brand-name

    {
    font-size: 20px;
    }


    .product-header h1 .product-name {
    font-size: 32px;
    }

    .product-action {
    flex-direction: column;
    }

    .details-tabs {
    flex-wrap: wrap;
    gap: 16px;
    }

    .product-main,
    .product-details {
    margin: 20px 0;
    padding: 30px 0;
    }

    .size-options {
    grid-template-columns: repeat(2, 1fr);
    }

    .size-option {
    padding: 8px;
    }

    .quantity-input {
    width: 28px;
    }

    .total-price {
    flex-direction: column;
    gap: 4px;
    text-align: center;}


       
</style>


<body>

    <!-- Əsas məhsul məlumatları -->
    <section class="product-main"style="margin-top:100px">
        <div class="container">

            <div class="product-content">
                <!-- Sol tərəf - Şəkil -->
                <div class="product-gallery">
                    <div class="main-image">
                        <img style="height:500px" src="@(!string.IsNullOrEmpty(Model?.ImageUrl) ? Model.ImageUrl : "/images/default.jpg")" alt="Image">

                    </div>
                    @*  <div class="thumbnail-list">
                        <img src="images/acqua-colonia-1.jpg" alt="Acqua di Parma Colonia - Əlavə görüntü 1">
                        <img src="images/acqua-colonia-2.jpg" alt="Acqua di Parma Colonia - Əlavə görüntü 2">
                        <img src="images/acqua-colonia-3.jpg" alt="Acqua di Parma Colonia - Əlavə görüntü 3">
                    </div> *@
                    @{
                        var topNotes = Model?.ProductNotes
                        .Where(pn => pn.Type == NoteType.Top)
                        .Select(pn => pn.FragranceNote)
                        .ToList();

                        var middleNotes = Model?.ProductNotes
                        .Where(pn => pn.Type == NoteType.Middle)
                        .Select(pn => pn.FragranceNote)
                        .ToList();

                        var baseNotes = Model?.ProductNotes
                        .Where(pn => pn.Type == NoteType.Base)
                        .Select(pn => pn.FragranceNote)
                        .ToList();
                    }

                    <div class="tab-pane active" id="notes">
                        <h2 class="mb-4 text-center">Ətir Piramidası</h2>

                        <div class="pyramid-container">
                            <div class="pyramid">

                                <!-- Üst notları -->
                                <div class="pyramid-level top-note">
                                    <span class="note-label">Üst Notları</span>
                                </div>
                                <div class="note-line">
                                    <span>
                                        @if (topNotes.Any())
                                        {
                                            @string.Join(", ", topNotes.Select(n => n?.Name))
                                        }
                                        else
                                        {
                                            <span class="text-danger">Tapılmadı</span>
                                        }
                                    </span>
                                </div>

                                <!-- Ürək notları -->
                                <div class="pyramid-level middle-note">
                                    <span class="note-label">Ürək Notları</span>
                                </div>
                                <div class="note-line">
                                    <span>
                                        @if (middleNotes.Any())
                                        {
                                            @string.Join(", ", middleNotes.Select(n => n?.Name))
                                        }
                                        else
                                        {
                                            <span class="text-danger">Tapılmadı</span>
                                        }
                                    </span>
                                </div>

                                <!-- Baza notları -->
                                <div class="pyramid-level base-note">
                                    <span class="note-label">Baza Notları</span>
                                </div>
                                <div class="note-line">
                                    <span>
                                        @if (baseNotes.Any())
                                        {
                                            @string.Join(", ", baseNotes.Select(n => n?.Name))
                                        }
                                        else
                                        {
                                            <span class="text-danger">Tapılmadı</span>
                                        }
                                    </span>
                                </div>

                            </div>
                        </div>
                    </div>


                </div>

                <!-- Sağ tərəf - Məlumatlar -->
                <div class="product-info">
                    <div class="product-header">
                        <h1>
                            <span class="brand-name">@Model?.Brand.Name</span>
                            <br>
                            <span class="product-name">@Model?.Name</span>
                        </h1>

                    </div>


                    <div class="product-sizes">
                        <h3>Həcm seçin</h3>
                        <div class="size-options">
                            @if (Model?.ProductVariants != null && Model.ProductVariants.Any())
                            {
                                @foreach (var item in Model.ProductVariants)
                                {
                                    <label class="size-option">
                                        <input type="radio"
                                               name="size"
                                               value="@item.Id"
                                               data-price="@item.CurrentPrice"
                                               data-size="@item.Size" />

                                        <span class="size-label">@item.Size</span>

                                        <div class="size-quantity">
                                            <button type="button" class="quantity-btn minus">-</button>
                                            <input type="number" value="1" min="1" max="10" class="quantity-input">
                                            <button type="button" class="quantity-btn plus">+</button>
                                        </div>
                                        <span class="size-price">@item.CurrentPrice.ToString("0.##") ₼</span>
                                    </label>
                                }
                            }
                        </div>

                        <div class="total-price">
                            <span>Ümumi məbləğ:</span>
                            <span class="total-amount">0 ₼</span>
                        </div>
                    </div>

                    <div class="product-action">
                        <button class="btn-add-to-cart">
                            <i class="fas fa-shopping-cart"></i>
                            Səbətə əlavə et
                        </button>
                    </div>



                    <div class="product-meta">
                        <div class="meta-item">
                            <i class="fas fa-tag"></i>
                            <span>Brend:   @Model?.Brand.Name</span>
                        </div>


                        <div class="meta-item">
                            <i class="fas fa-flag"></i>
                            <span>İstehsalçı ölkə: İtaliya</span>
                        </div>
                        <div class="meta-item">

                            @{
                                var gender = Model?.Category?.Name;
                                string iconClass = "";
                                string genderAz = "";

                                switch (gender)
                                {
                                    case "Men":
                                        iconClass = "fas fa-mars";
                                        genderAz = "Kişi üçün";
                                        break;
                                    case "Women":
                                        iconClass = "fas fa-venus";
                                        genderAz = "Qadın üçün";
                                        break;
                                    case "Unisex":
                                        iconClass = "fas fa-venus-mars";
                                        genderAz = "Uniseks";
                                        break;
                                    default:
                                        iconClass = "fas fa-question";
                                        genderAz = "Naməlum";
                                        break;
                                }
                            }

                            @if (!string.IsNullOrEmpty(genderAz))
                            {
                                <div>
                                    <i class="@iconClass" title="@genderAz üçün"></i> &nbsp <span>Cins:</span> @genderAz
                                </div>
                            }

                            
                        </div>
                        <div class="meta-item">
                            <i class="fas fa-spa"></i>
                            <span>
                                Qrup: @Model?.Family.Name
                            </span>
                        </div>
                        <!--
                        <div class="meta-item">
                        <i class="fas fa-venus-mars"></i>
                        <span>Kateqoriya: Uniseks</span>
                        </div>
                        -->
                    </div>
                    <div class="NoteforPerfum">
                        <h2>Qeyd: Ətirlər orijinaldan ilhamlanaraq hazırlanıb, "MillShop Esans"-a məxsus qablaşmada təqdim olunur.</h2>
                    </div>
                    <div class="product_socials">
                        <div class="share-buttons-container">
