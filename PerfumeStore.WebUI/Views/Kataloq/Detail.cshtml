                                    <input type="number" value="0" min="0" max="10" class="quantity-input" title="Miqdar">
                                    <button class="quantity-btn plus" title="Artır">+</button>
                                </div>
                                <span class="size-price">450 ₼</span>
                            </label>
                        </div>
                        <div class="total-price">
                            <span>Ümumi məbləğ:</span>
                            <span class="total-amount">0 ₼</span>
                        </div>
                    </div>
                    <div class="product-action">
                        <button class="btn-add-to-cart">
                            <i class="fas fa-shopping-cart"></i>
                            Səbətə əlavə et
                        </button>
                        <button class="btn-wishlist">
                            <i class="far fa-heart"></i>
                            İstək siyahısına əlavə et
                        </button>
                    </div>



                    <div class="product-meta">
                        <div class="meta-item">
                            <i class="fas fa-tag"></i>
                            <span>Brend:   @Model?.Brand.Name</span>
                        </div>


                        <div class="meta-item">
                            <i class="fas fa-flag"></i>
                            <span>İstehsalçı ölkə: İtaliya</span>
                        </div>
                        <div class="meta-item">

                            @{
                                var gender = Model?.Category?.Name;
                                string iconClass = "";
                                string genderAz = "";

                                switch (gender)
                                {
                                    case "Men":
                                        iconClass = "fas fa-mars";
                                        genderAz = "Kişi üçün";
                                        break;
                                    case "Women":
                                        iconClass = "fas fa-venus";
                                        genderAz = "Qadın üçün";
                                        break;
                                    case "Unisex":
                                        iconClass = "fas fa-venus-mars";
                                        genderAz = "Uniseks";
                                        break;
                                    default:
                                        iconClass = "fas fa-question";
                                        genderAz = "Naməlum";
                                        break;
                                }
                            }

                            @if (!string.IsNullOrEmpty(genderAz))
                            {
                                <div>
                                    <i class="@iconClass" title="@genderAz üçün"></i> &nbsp <span>Cins:</span> @genderAz
                                </div>
                            }

                            
                        </div>
                        <div class="meta-item">
                            <i class="fas fa-spa"></i>
                            <span>
                                Qrup: @Model?.Family.Name
                            </span>
                        </div>
                        <!--
                        <div class="meta-item">
                        <i class="fas fa-venus-mars"></i>
                        <span>Kateqoriya: Uniseks</span>
                        </div>
                        -->
                    </div>
