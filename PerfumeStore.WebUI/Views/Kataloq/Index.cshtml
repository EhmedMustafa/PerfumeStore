                </form>


                <p>Hazırda axtarış aralığı: <strong>@ViewBag.MinPrice</strong> ₼ - <strong>@ViewBag.MaxPrice</strong> ₼</p>

            </aside>


            <div class="product-grid">
                @if (Model?.Items != null && Model.Items.Any())
                {
                    @foreach (var product in Model.Items)
                    {
                        var minPrice = product.ProductVariants?.Any() == true
                        ? product.ProductVariants.Min(x => x.CurrentPrice)
                        : 0;
                        var maxPrice = product.ProductVariants?.Any() == true
                        ? product.ProductVariants.Max(x => x.CurrentPrice)
                        : 0;
                        <article class="product-card"
                        data-gender="@product.CategoryName?.ToLower()"
                        data-family="@product.FamilyName?.ToLower()"
                        data-brand="@product.BrandName?.ToLower()"
                        data-price="" style="border:1px solid">
                            <div class="product-image" style="width:100%;height:60%">
                                <a asp-controller="Kataloq" asp-action="Detail" asp-route-id="@product.ProductId">
                                    <img style="margin-top:20px" src="@product.ImageUrl" alt="@product.Name" />
                                </a>
                              
                                    
                             
                                
                                <div class="product-badges">
                                    @if (product.IsNew)
                                    {
                                        <span class="badge new">Yeni</span>
                                    }
                                    @if (product.IsBestseller)
                                    {
                                        <span class="badge bestseller">Çox Satılan</span>
                                    }
                                   
                                </div>
                               
                                <div class="product-actions"style="height:60px;font-weight:300">
                                    <button class="favorite-btn"><i class="far fa-heart"></i></button>
                                    <span class="product-disclaimer">Şəkil tanıtım xarakteri daşıyır</span>

                                   
                                  @*  <button class="add-to-cart" data-productId="@product.ProductId" data-quantity="1" type="button">
                                    <i class="fas fa-shopping-cart"></i></button>*@
                                </div>
                            </div>

                            <div class="product-info"style="margin-top:50px;">
                                <h3>@product.Name</h3>
                                <p class="product-description">
                                      
                                        <span style="color:blueviolet;font-size:15px" class="fragrance-family"> @product.BrandName</span>
                                 </p>

                            

                                <div class="product-price">

                                    <div style="margin-right:20px" class="product-price">
                                        @if (minPrice == maxPrice)
                                        {
                                            <span class="current-price">@minPrice ₼</span>
                                        }
                                        else
                                        {
                                            <span style="font-size:25px;color:#00AFD5;text-decoration:none" class="original-price"> @minPrice ₼ - @maxPrice ₼</span>
                                        }
                                    </div>
                                    <button class="add-to-cart" data-bs-toggle="modal" data-bs-target="#productModal"
                                            data-product-id="@product.ProductId"
                                            data-product-name="@product.Name"
                                            data-product-image="@product.ImageUrl" type="button">
                                        <i class="fas fa-shopping-cart"></i>
                                    </button>
                                </div>
                            </div>
                          
                            </article>

                      
                        }


                    }
                    else
                    {
                        <p>Heç bir məhsul tapılmadı.</p>
                    }


                </div>
           
            
         
           
        </div>
        @if (Model?.Items != null && Model.Items.Any())
        {

            <nav aria-label="Page navigation" style="margin-top:50px;font-size:25px;margin-left:600px">
                <ul class="pagination">
                    @if (Model.HasPrevious)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@(Model.CurrentPage - 1)&categoryId=@ViewBag.SelectedCategory" style="color:cadetblue">«</a>
                        </li>
                    }
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        if (i == Model.CurrentPage)
                        {
                            <li class="page-item active" aria-current="page">
                                <span class="page-link">@i</span>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" href="?page=@i&categoryId=@ViewBag.SelectedCategory">@i</a>
                            </li>
                        }
                    }
                    @if (Model.HasNext)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@(Model.CurrentPage + 1)&categoryId=@ViewBag.SelectedCategory" style="color:cadetblue">»</a>
                        </li>
                    }
                </ul>
            </nav>

        }
    </section>
</main>

