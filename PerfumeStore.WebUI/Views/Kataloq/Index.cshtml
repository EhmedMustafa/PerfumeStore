            const addToCartBtn = document.getElementById('addToCartBtn');
            
            variantListDiv.innerHTML = '<div class="text-center py-3"><i class="fas fa-spinner fa-spin me-2"></i>Yüklənir...</div>';
            addToCartBtn.disabled = true;
            addToCartBtn.innerHTML = '<i class="fas fa-cart-plus me-2"></i>Əlavə et';
            addToCartBtn.classList.remove('btn-success', 'btn-danger');
            addToCartBtn.classList.add('btn-primary');
            selectedVariantId = null;

            // Variantları AJAX ilə yüklə
            fetch(`/ProductVariants/GetByProductId/${productId}`)
                .then(res => res.json())
                .then(variants => {
                    if (variants.length === 0) {
                        variantListDiv.innerHTML = '<div class="text-center py-3 text-muted"><i class="fas fa-info-circle me-2"></i>Variant tapılmadı</div>';
                        return;
                    }

                    variantListDiv.innerHTML = '';
                    variants.forEach(variant => {
                        const price = variant.currentPrice ?? variant.originalPrice;
                        
                        variantListDiv.innerHTML += `
                            <div class="variant-item">
                                        <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <input type="radio" 
                                               name="variantSelection" 
                                               value="${variant.id}" 
                                               id="variant_${variant.id}"
                                               class="me-3">
                                        <div>
                                            <div class="fw-semibold">${variant.size}</div>
                                        </div>
                                        <div>
                                                 <div class="variant-price">${price} ₼</div>
                                        </div>
                                               
                                    </div>
                                </div>
                            </div>
                        `;
                    });

                    // Radio button seçimini dinlə
                    const radioButtons = variantListDiv.querySelectorAll('input[name="variantSelection"]');
                    radioButtons.forEach(radio => {
                        radio.addEventListener('change', function() {
                            if (this.checked) {
                                selectedVariantId = parseInt(this.value);
                                addToCartBtn.disabled = false;
                                
                                // Bütün variant item-lardan selected class-ını sil
                                variantListDiv.querySelectorAll('.variant-item').forEach(item => {
                                    item.classList.remove('selected');
                                });
                                
                                // Seçilmiş variant item-a selected class-ı əlavə et
                                this.closest('.variant-item').classList.add('selected');
                            }
                        });
                    });
                })
