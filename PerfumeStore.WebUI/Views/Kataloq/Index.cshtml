<style>
        #productModal {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.5);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 1050;
        }

        /* Modal dialog */
        .modal-dialog {
            background: #fff;
            border-radius: 6px;
            max-width: 900px;
            width: 90%;
            max-height: 90vh;
            overflow-y: auto;
            box-shadow: 0 0 15px rgba(0,0,0,0.3);
            display: flex;
            flex-direction: column;
        }

        /* Modal header */
        .modal-header {
            padding: 1rem;
            border-bottom: 1px solid #dee2e6;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .modal-header h5 {
                margin: 0;
                font-size: 1.25rem;
            }

        /* Close button */
        .custom-close-btn {
            font-size: 1.5rem;
            font-weight: bold;
            background: none;
            border: none;
            cursor: pointer;
            color: #000;
        }

            .custom-close-btn:hover {
                color: red;
            }

        /* Modal body */
        .modal-body {
            padding: 1rem;
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

            /* Left column: image */
            .modal-body .image-col {
                flex: 0 0 33.3333%; /* təxminən col-md-4 */
            }

                .modal-body .image-col img {
                    max-width: 100%;
                    height: auto;
                    border-radius: 4px;
                }

            /* Right column: details */
            .modal-body .details-col {
                flex: 1; /* col-md-8 */
                min-width: 200px;
            }

        /* Variantlar üçün konteyner */
        #variantList {
            margin-top: 1rem;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .modal-body

        {
            flex-direction: column;
        }

        .modal-body .image-col,
        .modal-body .details-col {
            flex: 1 1 100%;
        }

        }

    .price-filter {
    max-width: 300px;
    margin-bottom: 20px;
    }

    .inputs {
    display: flex;
    align-items: center;
    justify-content: space-between;
